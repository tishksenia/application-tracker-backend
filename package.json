{
  "name": "application-tracker-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "start": "NODE_ENV=production npx pm2 start dist/app.js",
    "start:cluster": "NODE_ENV=production npx pm2 start dist/app.js -i MAX",
    "stop": "npx pm2 stop app",
    "restart": "npx pm2 restart app",
    "monitor": "npx pm2 monit",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js\""
  },
  "dependencies": {
    "@sentry/node": "^7.55.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.1.4",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.16.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.0",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
